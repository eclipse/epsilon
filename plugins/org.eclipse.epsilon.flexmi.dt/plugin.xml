<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Flexmi Editor"
            extensions="flexmi"
            icon="icons/flexmi.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.eclipse.epsilon.flexmi.dt.FlexmiEditor"
            id="org.eclipse.epsilon.flexmi.dt.FlexmiEditor">
      </editor>
   </extension>
	<extension
         id="problemmarker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
 <extension
       point="org.eclipse.ui.popupMenus">
    <objectContribution
          adaptable="true"
          id="org.eclipse.epsilon.flexmi.dt.contribution1"
          nameFilter="*.flexmi"
          objectClass="org.eclipse.core.resources.IFile">
       <action
             class="org.eclipse.epsilon.flexmi.dt.GenerateXMIAction"
             enablesFor="1"
             id="org.eclipse.epsilon.flexmi.dt.GenerateXMIAction"
             label="Generate XMI">
       </action>
    </objectContribution>
 </extension>
 <extension
       point="org.eclipse.ui.views">
    <view
          category="org.eclipse.epsilon.dt"
          class="org.eclipse.epsilon.flexmi.dt.FlexmiRendererView"
          icon="icons/flexmi-renderer.png"
          id="org.eclipse.epsilon.flexmi.dt.FlexmiRendererView"
          inject="true"
          name="Flexmi Renderer">
    </view>
 </extension>
</plugin>
