<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="filesystem.presentation.FilesystemModelWizardID"
            name="%_UI_FilesystemModelWizard_label"
            class="filesystem.presentation.FilesystemModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/FilesystemModelFile.gif">
         <description>%_UI_FilesystemModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="filesystem.presentation.FilesystemEditorID"
            name="%_UI_FilesystemEditor_label"
            icon="icons/full/obj16/FilesystemModelFile.gif"
            extensions="filesystem"
            class="filesystem.presentation.FilesystemEditor"
            contributorClass="filesystem.presentation.FilesystemActionBarContributor">
      </editor>
   </extension>

</plugin>
